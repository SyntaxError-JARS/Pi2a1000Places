public class Menu {             //      Example  Default class used

    private String item_name;
    private double cost;
    private String protein;
    private boolean is_substitutable;

    public Menu( String item_name, double cost, String protein,Boolean is_substitutable){
        super();
        this.item_name = item_name;                     //  Assign the variable to the
        this.cost = cost;                               //
        this.protein = protein;                         //
        this.is_substitutable = is_substitutable;       //
    }

    public Menu(){

    }

    //Getters And Setters               /*  These commands are to make the data more secure and protect it. */
    public String geItem_name(){return item_name;}

    public void setItem_name(String item_name){this.item_name = item_name;}

    public String getCost(){return cost;}

    public void setCost(String cost){this.cost = cost;}

    public String getProtein(){return protein;}

    public void setProtein(String protein){this.protein = protein;}

    public String getIs_substitutable(){return is_substitutable;}

    public void setIs_substitutable(String is_substitutable){this.is_substitutable = is_substitutable;}

    @Override
    public String toString() {    /*  To output the consolidated line of a menu  */
        return "Item {" +
                 + item_name +   "   Price   " + cost + " protein    " +
                 protein + "Substitutable     " +  is_substitutable  '}';
    }

}